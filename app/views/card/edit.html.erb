<div class="cardeditPage">
  <div class="container">
    <%= form_with model: @card, url: { action: :update }, html: { class: "cardeditForm" } do |f| %>
      
      <% if @card.errors.any? %>
        <p class="text-danger">タイトルは1~255文字以内で入力してください</p><!-- /.text-danger -->
      <% end %>

      <div class="cardeditForm_title">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", placeholder: "カード名" %>
      </div><!-- /.cardeditForm_title -->

      <div class="cardeditForm_memo">
        <%= f.label :memo %>
        <%= f.text_area :memo, class: "form-control", placeholder: "詳細" %>
      </div><!-- /.cardeditForm_memo -->

      <div class="cardeditForm_memo">
        <label>リスト名</label>
        <%= select :card, :list_id, @lists.map{ |lis| [lis.title, lis.id] }, {}, { class: "form-control" } %>
      </div><!-- /.cardeditForm_memo -->

      <div class="text-center">
        <%= f.submit "更新する", class: "submitBtn" %>
      </div><!-- /.text-center -->
    <% end %>
  </div><!-- /.container -->
</div><!-- /.cardeditPage -->